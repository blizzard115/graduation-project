<h1 class="mb-3">投稿詳細</h1>

<div class="card">
  <div class="card-body">
    <% if @post.image.attached? %>
      <%= image_tag @post.image, class: "img-fluid rounded mb-3" %>
    <% end %>
    <p class="mb-2"><%= simple_format(@post.content) %></p>
    <div class="text-muted small">
      <%= @post.created_at.strftime("%Y/%m/%d %H:%M") %>
    </div>
  </div>
</div>

<div class="mt-3 d-flex gap-2">
  <%= link_to "一覧へ", posts_path, class: "btn btn-outline-secondary" %>
  <% if user_signed_in? && @post.user == current_user %>
    <%= link_to "編集", edit_post_path(@post), class: "btn btn-primary" %>
    <%= button_to "削除", post_path(@post), method: :delete,
          data: { turbo_confirm: "削除しますか？" },
          class: "btn btn-outline-danger" %>
  <% end %>
</div>
