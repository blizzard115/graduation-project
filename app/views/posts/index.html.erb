<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">投稿一覧</h1>
  <% if user_signed_in? %>
    <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">

    <% if post.image.attached? %>
        <%= image_tag post.image, class: "img-fluid rounded mb-2" %>
      <% end %>

      <p class="mb-1"><%= simple_format(post.content) %></p>
      <div class="text-muted small">
        <%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
      </div>

      <div class="mt-2 d-flex gap-2">
        <%= link_to "詳細", post_path(post), class: "btn btn-sm btn-outline-primary" %>

        <% if user_signed_in? && post.user == current_user %>
          <%= link_to "編集", edit_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
          <%= button_to "削除", post_path(post),
                method: :delete,
                data: { turbo_confirm: "削除しますか？" },
                class: "btn btn-sm btn-outline-danger" %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>
