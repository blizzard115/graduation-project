<div class="row g-3">
  <% @posts.each do |post| %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card h-100 shadow-sm">

        <!-- 画像 -->
        <%= link_to post_path(post) do %>
          <div class="insta-thumb-wrap">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "insta-thumb" %>
            <% else %>
              <div class="insta-thumb-wrap d-flex align-items-center justify-content-center text-muted">
                No Image
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- ユーザー名 -->
        <div class="card-body py-2">
          <div class="fw-semibold small">
            <%= post.user.username.presence || "名無しユーザー" %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
