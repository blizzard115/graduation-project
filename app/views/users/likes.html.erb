<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h4 fw-bold mb-1">
      <%= @user.username.presence || "名無しユーザー" %> のいいね
    </h1>
    <div class="text-muted small">いいねした投稿一覧</div>
  </div>

  <%= link_to "プロフィールへ戻る", user_path(@user), class: "btn btn-outline-secondary btn-sm" %>
</div>

<% if @posts.any? %>
  <div class="row g-3">
    <% @posts.each do |post| %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm overflow-hidden">

          <%= link_to post_path(post) do %>
            <div class="insta-thumb-wrap">
              <% if post.image.attached? %>
                <%= image_tag post.image, class: "insta-thumb" %>
              <% else %>
                <div class="insta-thumb-placeholder">No Image</div>
              <% end %>
            </div>
          <% end %>

          <div class="card-body py-2">
            <div class="d-flex align-items-center justify-content-between">
              <div class="fw-semibold small">
                <%= link_to(
                  post.user&.username.presence || "名無しユーザー",
                  post.user ? user_path(post.user) : "#",
                  class: "text-decoration-none text-dark"
                ) %>
              </div>

              <div class="d-flex align-items-center gap-2">
                <% if user_signed_in? %>
                  <%= render "likes/button", post: post %>
                <% else %>
                  <i class="bi bi-heart text-muted"></i>
                <% end %>
                <span class="small text-muted"><%= post.likes_count %></span>
              </div>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-muted">まだいいねした投稿がありません。</div>
<% end %>
